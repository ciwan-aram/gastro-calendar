<div class="container">
  <header>
    <ul class="nav-list flex">
      <li class="nav-left">
        <a href="/calendar" class="no-color-change">Calendar</a>
      </li>
      <div class="nav-right">
      </div>
    </ul>
  </header>

  <div class="cover-image_sign_up">
    <div class="signup-page-wrapper">
      <h2 class="sign-page-title">Signup</h2>

      <form action="/signup" method="POST" id="form-container">

        <div class="group">
          <label for="username">Username</label>
          <input id="username" type="text" name="username" placeholder="JonSnow">
        </div>
        <div class="group">
          <label for="password">Password</label>
          <input id="password" type="password" name="password" placeholder="Your password">
        </div>
        <div class="group">
          <label for="groupname">Group Name</label>
          <input id="groupname" type="text" name="groupname" placeholder="Your groupname">
        </div>
        <div class="group">
          <label for="email">E-mail</label>
          <input id="email" type="text" name="email" placeholder="Your email">
        </div>
        <div class="group">
          <label for="tel">TEL</label>
          <input id="tel" type="text" name="tel" placeholder="Your tel">
        </div>

        <div class="group">
          {{#if message}}
          <div class="error-message">{{ message }}</div>
          {{/if}}
        </div>

        <button class="sign_up_btn">Create account</button>

        <p class="account-message">
          Do you already have an account?
          <a href="/">Login</a>
        </p>
      </form>
    </div>
  </div>