<div class="container">
  <header>
    <ul class="nav-list flex">
      <li class="nav-left">
        <a href="/calendar" class="no-color-change">Calendar</a>
      </li>
      <div class="nav-right">
        <li class="nav-list-item"><a href="/users">Group</a></li>
        <li class="nav-list-item"><a href="/events">Event</a></li>
        <li class="nav-list-item"><a href="/profile">Profile</a></li>
      </div>
    </ul>
  </header>

  <div class="member_page_background">
    <div class="member_wrapper">

      <form action="/users/modify/{{id}}" method="POST">
        <label for="name">Name:</label>
        <input type="text" value="{{name}}" name="name" id="name-member" required>
        <label for="username">Username:</label>
        <input type="email" value="{{email}}" name="email" id="email-member" required>
        <label for="email">Email:</label>

        <input type="text" value="{{username}}" name="username" required>
        <label for="role">Role:</label>

        <input type="email" value="{{email}}" name="email">
        <input type="text" value="{{role}}" name="role" required>
        <input type="text" value="{{administration}}" name="administration">
        <button type="submit">Modify Member Data</button>
      </form>
    </div>
  </div>


  <footer>
    <p class="footer_white">- gastro calendar -<p></p>
  </footer>
</div>