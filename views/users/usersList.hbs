<div class="container">
    <header>
        <ul class="nav-list flex">
            <li class="nav-left">
                <a href="/calendar" class="no-color-change">Calendar</a>
            </li>
            <div class="nav-right">
                <li class="nav-list-item"><a href="/users">Group</a></li>
                <li class="nav-list-item"><a href="/events">Event</a></li>
                <li class="nav-list-item"><a href="/profile">Profile</a></li>
            </div>
        </ul>
    </header>

    <div class="member_page_background">
        <div class="new_member_wrapper">
            <div class="member_wrapper">
                <h1 class="headline-title">Members List</h1>


                <div class="list_wrapper">
                    {{#if users}}
                    <ul>
                        {{#each users}}
                        <li><a href="/users/{{_id}}">{{name}} {{username}} {{email}} {{role}} {{administration}}</a>
                        </li>
                        {{/each}}
                    </ul>
                    {{else}}
                    <h1 class="no_events">No Members to display</h1>
                    {{/if}}
                </div>
                {{#if users}}
                <div class="button-add">

                    <a href="/users/add">
                        <button class="btn_css">
                            Add a new member
                        </button>
                    </a>
                </div>
                {{/if}}
            </div>

            {{!-- How to make below appear only for admins --}}
            {{!-- <div class="user_add_btn"> --}}
            {{!-- </div> --}}

        </div>
    </div>
</div>

<footer>
    <p class="footer_white">- gastro calendar -<p></p>
</footer>