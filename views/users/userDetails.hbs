<div class="container">
    <header>
        <ul class="nav-list flex">
            <li class="nav-left">
                <a href="/calendar" class="no-color-change">Calendar</a>
            </li>
            <div class="nav-right">
                <li class="nav-list-item"><a href="/users">Group</a></li>
                <li class="nav-list-item"><a href="/events">Event</a></li>
                <li class="nav-list-item"><a href="/profile">Profile</a></li>
            </div>
        </ul>
    </header>

    <div class="member_page_background">
        <div class="member_wrapper">

            <h2>{{name}}</h2>
            <h3>Username: {{username}}</h3>
            <h3>Email: {{email}}</h3>
            {{#if showDelete}}
            <h3>Role: {{role}}</h3>
            <h3>Administration level: {{administration}}</h3>
            <a href="/users/{{userId}}/delete">Delete member</a>
            {{/if}}
            {{#if showModify}}
            <a href="/users/{{userId}}/modify">Edit user information</a>
            {{/if}}

        </div>
    </div>


    <footer>
        <p class="footer_white">- gastro calendar -<p></p>
    </footer>
</div>